package com.multi.mongoDB;

import java.util.Date;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.data.domain.Sort;
import org.springframework.data.mongodb.core.MongoTemplate;
import org.springframework.data.mongodb.core.query.Criteria;
import org.springframework.data.mongodb.core.query.Query;
import org.springframework.data.mongodb.core.query.Update;
import org.springframework.stereotype.Repository;

@Repository
public class MemoDAOImpl implements MemoDAO {

	@Autowired
	MongoTemplate mongoTemplate;

	@Override
	public List<MemoVO> list() {
		Query query = new Query();
		query.with(new Sort(Sort.Direction.DESC, "date"));
		return (List<MemoVO>) mongoTemplate.find(query, MemoVO.class, "memo"); // memo는 컬렉션이
	}

	@Override
	public void insert(MemoVO vo) {
		vo.setDate(new Date());
		mongoTemplate.insert(vo, "memo"); 
	}

	@Override
	public MemoVO one(String _id) {
		return mongoTemplate.findById(_id, MemoVO.class, "memo");
	}

	@Override
	public void update(MemoVO vo) {
		Query query = new Query(new Criteria("_id").is(vo.get_id()));
		System.out.println("DAO>> " + vo);
		Update update = new Update();
		update.set("name", vo.getName());
		update.set("content", vo.getContent());
		update.set("weather", vo.getWeather());
		System.out.println(update);
		mongoTemplate.updateMulti(query, update, MemoVO.class, "memo");
	}

	@Override
	public void delete(String _id) {
		Query query = new Query(new Criteria("_id").is(_id));
		mongoTemplate.remove(query, "memo");
	}

}